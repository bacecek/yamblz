<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DrawerTextView">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/colorTextBlack</item>
    </style>

    <style name="AboutClickableTextView">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textColor">@color/colorTextBlack</item>
    </style>

    <style name="SettingsItem">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="SettingsItemTitle">
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="SettingsItemSubtitle">
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorSettingsSubtitleText</item>
    </style>

    <style name="WeatherAdditionalInfoTitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorWeatherDescriptionTitle</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="WeatherAdditionalInfoValue">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorTextBlack</item>
    </style>

</resources>
